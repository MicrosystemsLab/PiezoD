FROM ubuntu:24.04

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    tcl \
    tcl-dev \
    tk \
    tk-dev \
    libsuitesparse-dev \
    libplplot-dev \
    plplot-tcl \
    libopenblas-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy FLOOXS 2024 source (user must provide this folder)
COPY FLOOXS_2024/ /opt/flooxs/

# Set environment
ENV FLXSHOME=/opt/flooxs
ENV PL_LIBRARY=/usr/share/plplot5.15.0/tcl/

# Build FLOOXS
WORKDIR /opt/flooxs
# Create placeholder License.pdf for CPack (actual license not redistributed)
RUN touch License.pdf && mkdir -p build && cd build && cmake .. && make -j$(nproc)

# Create working directory for simulations
WORKDIR /work

# The built executable
ENTRYPOINT ["/opt/flooxs/build/flooxs"]
